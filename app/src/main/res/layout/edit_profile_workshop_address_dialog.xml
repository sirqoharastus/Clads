<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/workshop_address_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/workshop_address_dialog_workshop_address_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_34dp"
            android:fontFamily="@font/poppins"
            android:text="@string/all_workshop_address_text"
            android:textColor="@color/navy_blue"
            android:textSize="@dimen/text_size_15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/workshop_address_dialog_street_edittext"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:backgroundTint="@color/deep_sky_blue"
            android:hint="@string/all_street_text"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/workshop_address_dialog_workshop_address_textview"
            app:layout_constraintTop_toBottomOf="@+id/workshop_address_dialog_workshop_address_textview" />

        <EditText
            android:id="@+id/workshop_address_dialog_city_edittext"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:backgroundTint="@color/deep_sky_blue"
            android:hint="@string/all_city"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintEnd_toEndOf="@+id/workshop_address_dialog_street_edittext"
            app:layout_constraintStart_toStartOf="@id/workshop_address_dialog_street_edittext"
            app:layout_constraintTop_toBottomOf="@+id/workshop_address_dialog_street_edittext" />

        <EditText
            android:id="@+id/workshop_address_dialog_state_edittet"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:backgroundTint="@color/deep_sky_blue"
            android:hint="@string/all_state_text"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintEnd_toEndOf="@+id/workshop_address_dialog_city_edittext"
            app:layout_constraintStart_toStartOf="@id/workshop_address_dialog_city_edittext"
            app:layout_constraintTop_toBottomOf="@+id/workshop_address_dialog_city_edittext" />

        <TextView
            android:id="@+id/workshop_address_dialog_cancel_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_48dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:fontFamily="@font/poppins"
            android:text="@string/all_cancel_text"
            android:textColor="@color/deep_sky_blue"
            android:textSize="@dimen/text_size_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/workshop_address_dialog_ok_textview"
            app:layout_constraintTop_toBottomOf="@+id/workshop_address_dialog_state_edittet" />

        <TextView
            android:id="@+id/workshop_address_dialog_ok_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/all_ok_text"
            android:textColor="@color/deep_sky_blue"
            android:textSize="@dimen/text_size_15sp"
            app:layout_constraintBottom_toBottomOf="@+id/workshop_address_dialog_cancel_textview"
            app:layout_constraintEnd_toEndOf="@+id/workshop_address_dialog_state_edittet" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>