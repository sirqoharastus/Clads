<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/deep_sky_blue"
    tools:context=".ui.fragments.authentication.SignupChoicesFragment"
    android:id="@+id/fragment_signup_choices_parent_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/fragment_signup_choices_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/signup_choices_fragment_a_logo_of_the_app"
                android:src="@drawable/ic_clad_logo_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_signup_choices_button_with_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_100dp"
                android:drawableLeft="@drawable/google_logo_icon"
                android:drawablePadding="@dimen/padding_10dp"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/padding_40dp"
                android:paddingVertical="@dimen/padding_6dp"
                android:text="@string/signup_choices_fragment_signup_with_google"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:backgroundTint="@color/white"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_signup_choices_imageview" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_signup_choices_button_with_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30dp"
                android:backgroundTint="@color/deep_sky_blue"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/padding_40dp"
                app:strokeColor="@color/white"
                app:cornerRadius="@dimen/margin_5dp"
                app:strokeWidth="@dimen/layout_height_or_width_2dp"
                android:paddingVertical="6dp"
                android:text="@string/signup_choices_fragment_sign_up_with_email"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="@dimen/text_size_18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_signup_choices_button_with_google" />

            <TextView
                android:id="@+id/fragment_signup_choices_textview_have_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_50dp"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:fontFamily="@font/poppins"
                android:text="Have an account? Login"
                android:textSize="@dimen/text_size_15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/fragment_signup_choices_button_with_email"
                app:layout_constraintStart_toStartOf="@+id/fragment_signup_choices_button_with_email"
                app:layout_constraintTop_toBottomOf="@+id/fragment_signup_choices_button_with_email"
                app:layout_constraintVertical_bias="0.0" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>