<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5dp"
    android:clickable="true"
    android:clipToPadding="false"
    android:focusable="true"
    android:padding="@dimen/padding_5dp">

    <ImageView
        android:id="@+id/photo_recyclerview_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:src="@drawable/tailor_photo"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/photo_recyclerview_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_89dp"
        android:layout_below="@+id/photo_recyclerview_imageview"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="Fine Man Suit" />

</RelativeLayout>